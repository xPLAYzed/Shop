@model Order

<div class="row">
    <h3>Оформленение заказа</h3>
    <form asp-action="Complete" method="post" class="form-horisontal">
        <div class="form-group">
            <label asp-for="name"></label>
            <div class=" col-md-5">
                <input asp-for="name" class=" form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="surname"></label>
            <div class=" col-md-5">
                <input asp-for="surname" class=" form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="adress"></label>
            <div class=" col-md-5">
                <input asp-for="adress" class=" form-control" />
                <span asp-validation-for="adress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="phone"></label>
            <div class=" col-md-5">
                <input asp-for="phone" class=" form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
                &nbsp;
            </div>
        </div>

        <input class="btn btn-success" type="submit" value="Завершить заказ" />
       
    </form>
</div> 
